# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Python files
[*.py]
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Markdown files (don't trim trailing whitespace - needed for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# Lua (for Neovim config)
[*.lua]
indent_size = 2

# KDL (for Zellij config)
[*.kdl]
indent_size = 4

# TOML
[*.toml]
indent_size = 2
